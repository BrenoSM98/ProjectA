<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Superiores">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/superTextView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Exercícios Superiores"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/remadaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remada Sentado" />

            <ImageView
                android:id="@+id/remadaImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/super1" />

            <TextView
                android:id="@+id/ombroTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desenvolvimento Ombro" />

            <ImageView
                android:id="@+id/ombroImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/super2" />

            <TextView
                android:id="@+id/lateralTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elevação Lateral" />

            <ImageView
                android:id="@+id/lateralImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/super3" />

            <TextView
                android:id="@+id/supinoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supino Reto" />

            <ImageView
                android:id="@+id/supinoImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/super4" />

            <TextView
                android:id="@+id/roscaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rosca Scott" />

            <ImageView
                android:id="@+id/roscaGifImageView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/super5gif" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>